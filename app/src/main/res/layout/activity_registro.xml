<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/text_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgProfilePic"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18dp" />

    </LinearLayout>

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:background="@android:color/holo_red_light"
        android:text="LOGOUT"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/notSignedIn_tv"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/registro"
        android:layout_below="@+id/sign_out_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:fontFamily="casual"
        android:text="@string/textLog2"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorApp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="55dp"
        android:layout_toEndOf="@+id/sign_out_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/registro"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_above="@+id/sign_in_button"
        android:layout_alignEnd="@+id/sign_in_button"
        android:layout_marginBottom="12dp"
        android:background="@color/colorApp"
        android:text="@string/registro"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        app:layout_constraintBottom_toTopOf="@+id/sign_in_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/notSignedIn_tv"
        android:layout_alignStart="@+id/notSignedIn_tv"
        android:layout_below="@+id/notSignedIn_tv"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:fontFamily="monospace"
        android:text="@string/btnVolver"
        android:textAllCaps="false"
        android:textColor="@color/colorApp2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace" />

</RelativeLayout>